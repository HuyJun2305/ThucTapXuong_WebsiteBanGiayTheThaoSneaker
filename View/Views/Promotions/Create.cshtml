@model DataProcessing.Models.Promotion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>
<hr />

<div class="container-fluid p-0">
    <div class="row">
        <!-- Form Promotion -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-footer">
                    <h4>Promotion</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DiscountValue" class="control-label"></label>
                            <input asp-for="DiscountValue" class="form-control" />
                            <span asp-validation-for="DiscountValue" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                            </label>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

                <div class="card-footer">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>

        <!-- Product Selection -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-footer">
                    <h4>Product</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="table-responsive">
                            <table class="table table-striped styled-table">
                                <thead class="table-light">
                                    <tr>
                                        <th>STT</th>
                                        <th>Sản phẩm</th>
                                        <th>Chọn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.ProductList != null)
                                    {
                                        int stt = 1;
                                        foreach (var product in ViewBag.ProductList)
                                        {
                                            <tr>
                                                <td>@stt</td>
                                                <td>@product.Text</td>
                                                <td>
                                                    <input type="checkbox" name="SelectedProducts" value="@product.Value" />
                                                </td>
                                            </tr>
                                            stt++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
