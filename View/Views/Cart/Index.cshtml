@model IEnumerable<DataProcessing.Models.CartDetail>
@{
    ViewData["Title"] = "Index";
    decimal totalAmount = 0;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>Giá</th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quanlity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDetailId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
                <td>@Html.DisplayFor(modelItem => item.ProductDetail.Price) VND</td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
                <td>
                    <input type="number" id="quantity_@item.Id" name="quantity" min="1" max="10" value="1" class="form-select" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CartId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDetailId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Cart Details", "CartDetails", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteCartDetail", new { id = item.Id })
            </td>
            </tr>
            totalAmount += (decimal)item.TotalPrice;
        }
    </tbody>
</table>
<h3>Tổng tiền: @totalAmount VND</h3>
