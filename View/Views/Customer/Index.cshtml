@model View.ViewModel.ProductDetailIndexDetailsVM

@{
    Layout = "_LayoutCustomer";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="product-image">
                    <div id="productCarousel-@item.Id" class="carousel slide" data-ride="carousel" data-interval="3000">
                        <div class="carousel-inner">
                            @foreach (var image in Model.ImagesForProduct.Where(i => i.ProductId == item.Id))
                            {
                                <div class="carousel-item @(image == Model.ImagesForProduct.First(i => i.ProductId == item.Id) ? "active" : "")">
                                    <img src="@Url.Content(image.URL)" alt="NotFound" class="d-block w-100" style="height: 250px; object-fit: cover;">
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-action="Details" asp-controller="Customer" asp-route-id="@item.Id" class="text-dark">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </h5>
                    <p class="card-text">
                        <strong>Price:</strong> @Html.DisplayFor(modelItem => Model.ProductDetails.FirstOrDefault(i => i.ProductId == item.Id).Price)<br />
                        <strong>Colors:</strong>
                        @foreach (var color in Model.ProductDetails
                       .Where(i => i.ProductId == item.Id)
                       .GroupBy(i => new { i.Color.Name, i.Color.Status })
                       .Select(g => g.First()))
                        {
                            <span class="badge @(color.Color.Status ? "bg-primary" : "bg-secondary")">@color.Color.Name</span>
                        }
                        <br />
                        <strong>Sizes:</strong>
                        @foreach (var size in Model.ProductDetails
                       .Where(i => i.ProductId == item.Id)
                       .GroupBy(i => new { i.Size.Value, i.Size.Status })
                       .Select(g => g.First()))
                        {
                            <span class="badge @(size.Size.Status ? "bg-success" : "bg-secondary")">@size.Size.Value</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    }
</div>
