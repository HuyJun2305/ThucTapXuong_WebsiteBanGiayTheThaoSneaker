@model Data.ViewModels.FilterProductViewModel

@{
    ViewData["Title"] = "Lọc sản phẩm";
}

<h2>Lọc sản phẩm</h2>

<!-- Form lọc sản phẩm -->
<form asp-action="FilterProductDetails" method="get">
    <div>
        <label for="colorSelect">Chọn màu sắc:</label>
        <select id="colorSelect" name="selectedColorId" class="form-control">
            <option value="">-- Tất cả --</option>
            @foreach (var color in Model.Colors)
            {
                <option value="@color.Id">@color.Name</option>
            }
        </select>
    </div>

    <div>
        <label for="categorySelect">Chọn danh mục:</label>
        <select id="categorySelect" name="selectedCategoryId" class="form-control">
            <option value="">-- Tất cả --</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>

    <div>
        <label for="brandSelect">Chọn thương hiệu:</label>
        <select id="brandSelect" name="selectedBrandId" class="form-control">
            <option value="">-- Tất cả --</option>
            @foreach (var brand in Model.Brands)
            {
                <option value="@brand.Id">@brand.Name</option>
            }
        </select>
    </div>

    <div>
        <label for="soleSelect">Chọn đế giày:</label>
        <select id="soleSelect" name="selectedSoleId" class="form-control">
            <option value="">-- Tất cả --</option>
            @foreach (var sole in Model.Soles)
            {
                <option value="@sole.Id">@sole.TypeName</option>
            }
        </select>
    </div>

    <div>
        <label for="sizeSelect">Chọn kích thước:</label>
        <select id="sizeSelect" name="selectedSizeId" class="form-control">
            <option value="">-- Tất cả --</option>
            @foreach (var size in Model.Sizes)
            {
                <option value="@size.Id">@size.Value</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lọc</button>
</form>


<!-- Danh sách sản phẩm sau khi lọc -->
<h2>Danh sách sản phẩm</h2>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên sản phẩm</th>
            <th>Chất liệu (Material)</th>
            <th>Màu sắc</th>
            <th>Kích thước</th>
            <th>Thương hiệu</th>
            <th>Danh mục</th>
            <th>Đế (Sole)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ProductDetails != null && Model.ProductDetails.Any())
        {
            var index = 1;
            foreach (var productDetail in Model.ProductDetails)
            {
                <tr>
                    <td>@index</td>
                    <td>@productDetail.Product.Name</td>
                    <td>@productDetail.Product.Material.Name</td>
                    <td>@productDetail.Color.Name</td>
                    <td>@productDetail.Size.Value</td>
                    <td>@productDetail.Product.Brand.Name</td>
                    <td>@productDetail.Product.Category.Name</td>
                    <td>@productDetail.Product.Sole.TypeName</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@productDetail.Id" class="btn btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@productDetail.Id" class="btn btn-warning">Chỉnh sửa</a>
                        <a asp-action="Delete" asp-route-id="@productDetail.Id" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="9">Không có sản phẩm nào được tìm thấy.</td>
            </tr>
        }
    </tbody>
</table>
